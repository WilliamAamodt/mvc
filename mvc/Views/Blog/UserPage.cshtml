@model IEnumerable<mvc.Models.Entites.Blog>

@{
    ViewData["Title"] = "UserPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserPage</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.UserName)
            </td>
            <td>
                <a asp-action="BlogView" asp-route-id="@item.BlogId">@Html.DisplayFor(modelItem => item.Name)</a>
                <input type="hidden" name="BlogId" value="@item.BlogId"/>
            </td>
            <td>
                <a asp-action="EditBlog" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-action="DeleteBlogAsync" asp-route-id="@item.BlogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
