@using mvc.Models.BlogRepo
@using System.Security.Principal
@model IEnumerable<mvc.Models.Entites.Blog>

@{
    ViewData["Title"] = "Blog liste";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Owner.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.UserName)
                </td>
                <td>
                    <a asp-action="BlogView" asp-route-id="@item.BlogId">@Html.DisplayFor(modelItem => item.Name)</a>
                    <input type="hidden" name="BlogId" value="@item.BlogId"/>
                </td>
                <td>
                    <a asp-action="EditBlog" asp-route-id="@item.BlogId">Edit</a> |
                    <a asp-action="DeleteBlog" asp-route-id="@item.BlogId">Delete</a>
                </td>
                <td>
                    <a asp-action="SubscribeToBlog" asp-route-id="@item.BlogId"> SUBSCRIBE</a>
                </td>
            </tr>

        }
    </tbody>
</table>
